<% if @success %>
  $('.favorite_link').attr('href', '<%= favorite_product_path(id: params[:id], type: params[:type]) %>').attr('id', 'unmark_as_favorite').attr('data-method', 'delete').html('<i class="fa fa-heart"></i>');
  
  var $item = $("#favorite_variant_<%= params[:id]%>"),
      $removeFromCart = $item.closest('tr').find('a.delete');
    
  $item.remove();
  $removeFromCart.click(); // remove it from cart
<% end %>
alert("<%=j @message%>");
