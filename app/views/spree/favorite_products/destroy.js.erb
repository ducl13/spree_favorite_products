<% if @success %>
  if($('.favorite_link').length) {
    $('.favorite_link').attr('href', '<%= favorite_products_path(:id => params[:id], type: params[:type]) %>').attr('id', 'mark_as_favorite').attr('data-method', 'post').html('<i class="fa fa-heart-o"></i>');
    alert('Successfully unmarked as saved item');
  } else {
    <% if @favorite.favoritable_type == 'Spree::Product' %>
      $("#favorite_product_<%= @favorite.favoritable_id%>").remove();
    <% else %>
      $("#favorite_variant_<%= @favorite.favoritable_id%>").remove();
    <% end %>
    alert("Successfully removed saved item from your list");
    if (!$('.favorite_product').length) {
      window.location = '<%= favorite_products_path %>'
    }
  }
<% else %>
  alert("Could not remove product from your list")
<% end %>
